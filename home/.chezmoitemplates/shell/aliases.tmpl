# Docker compose aliases
# Start the docker-compose stack in the current directory
alias dcu="docker compose up -d"

# Start the docker-compose stack in the current directory and rebuild the images
alias dcub="docker-compose up -d --build"

# Stop, delete (down) or restart the docker-compose stack in the current directory
alias dcs="docker compose stop"
alias dcd="docker compose down"
alias dcr="docker compose restart"

# Show the logs for the docker-compose stack in the current directory
alias dcl="docker compose logs"

# Quickly run the docker exec command
alias dex="docker exec -it"

# 'docker ps' displays the currently running containers
alias dps="docker ps"

# Stop all running containers
alias dsa="docker ps -q | xargs -r docker stop"

# Remove stopped containers, unused images, unused networks, etc.
alias dsp="docker system prune"

# FluxCD shortcuts
alias fxs='flux get sources all -A'
# Get all sources across namespaces
alias fxk='flux get kustomizations -A'
# Get all kustomizations across namespaces
alias fxh='flux get helmreleases -A'
# Get all helm releases across namespaces
alias fxr='flux reconcile'
# Shortcut for reconcile command
alias fxrk='flux reconcile kustomization'
# Reconcile kustomization
alias fxrh='flux reconcile helmrelease'
# Reconcile helmrelease
alias fxrs='flux reconcile source'
# Reconcile source
alias fxl='flux logs'
# View flux logs
alias fxe='flux events -A'
# Show all flux events
alias fxsusp='flux suspend'
# Suspend flux resource
alias fxres='flux resume'
# Resume flux resource

# More advanced aliases
alias fxrhf='flux reconcile helmrelease -n flux-system'
# Reconcile helmrelease in flux-system namespace
alias fxrkf='flux reconcile kustomization -n flux-system'
# Reconcile kustomization in flux-system namespace
alias fxhr='flux get helmreleases --status-selector ready=false -A'
# Get non-ready helm releases
alias fxkr='flux get kustomizations --status-selector ready=false -A'
# Get non-ready kustomizations
alias fxpend='flux get all -A | grep -i progressing'
# Show all progressing resources
alias fxfail='flux get all -A | grep -i failed'
# Show all failed resources

# Resource troubleshooting
alias fxtree='flux tree kustomization'
# Show kustomization tree
alias fxgtk='flux get kustomization'
# Get kustomization details
alias fxgth='flux get helmrelease'
