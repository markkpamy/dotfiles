# Superfile main configuration file
theme = "catppuccin"

# Editor settings - uses system EDITOR environment variable if not specified
editor = ""
dir_editor = ""

# Navigation and display settings
cd_on_quit = false
default_open_file_preview = true
show_image_preview = true
default_directory = "."
file_size_use_si = false

# Sorting settings
default_sort_type = 0
sort_order_reversed = false
case_sensitive_sort = false

# Debug and plugin settings
debug = false
metadata = false
enable_md5_checksum = false

# UI configuration
nerdfont = true
transparent_background = false
preview_ratio = 2
sidebar_width = 10
file_preview_width = 2
code_previewer = ""

# Border styling
border_top = "─"
border_bottom = "─"
border_left = "│"
border_right = "│"
border_top_left = "╭"
border_top_right = "╮"
border_bottom_left = "╰"
border_bottom_right = "╯"
border_middle_left = "├"
border_middle_right = "┤"

# Update settings
auto_check_update = true
